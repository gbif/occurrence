<configuration>

  <contextName>Occurrence Processor</contextName>
  <jmxConfigurator/>

  <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
    <resetJUL>true</resetJUL>
  </contextListener>

  <property name="defaultPattern" value="%-5level [%date{'yyyy-MM-dd HH:mm:ss,SSSZ'}] [%thread] %logger: %msg%n%xEx"/>

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <pattern>${defaultPattern}</pattern>
    </layout>
  </appender>

  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/occurrence-processor.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>logs/occurrence-processor.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
      <maxHistory>14</maxHistory>
    </rollingPolicy>
    <layout class="ch.qos.logback.classic.PatternLayout">
      <pattern>${defaultPattern}</pattern>
    </layout>
  </appender>

  <logger name="org.apache.commons" level="WARN"/>
  <logger name="httpclient" level="WARN"/>
  <logger name="org.apache.hadoop" level="WARN"/>
  <logger name="org.apache.zookeeper" level="WARN"/>
  <logger name="org.gbif.occurrence.parsing" level="WARN"/>
  <logger name="org.gbif.occurrence.model" level="WARN"/>
  <logger name="org.gbif.common" level="INFO"/>

  <root level="INFO">
    <appender-ref ref="CONSOLE"/>
    <appender-ref ref="FILE"/>
  </root>

</configuration>
