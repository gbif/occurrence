      <artifactId>jts</artifactId>
      <scope>runtime</scope>
    </dependency>
    <!-- this needs to match cluster version -->
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
      <version>${guava.version}</version>
    </dependency>

