      <scope>runtime</scope>
      <exclusions>
        <exclusion>
          <groupId>org.apache.hadoop</groupId>
          <artifactId>hadoop-core</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.apache.oozie</groupId>
      <artifactId>oozie-sharelib-hive</artifactId>
      <version>${oozie.version}</version>
      <scope>runtime</scope>
    </dependency>
