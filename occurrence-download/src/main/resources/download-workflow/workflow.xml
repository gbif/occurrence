        </property>
        <property>
          <name>hive_db</name>
          <value>${wf:actionData('download_prepare')['hive_db']}</value>
        </property>
      </configuration>
    </sub-workflow>
    <ok to="end"/>
    <error to="notify-error"/>
  </action>

