 </property>
 <property>
    <name>hbase.client.scanner.timeout.period</name>
    <value>900000</value>
 </property>
 <property>
    <name>hbase.regionserver.lease.period</name>
    <value>900000</value>
 </property>
  <property>
    <name>hbase.zookeeper.quorum</name>
    <value>c1n8.gbif.org,c1n9.gbif.org,c1n10.gbif.org</value>
  </property>
</configuration>
