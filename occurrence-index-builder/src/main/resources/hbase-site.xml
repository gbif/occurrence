<configuration>
 <property>
   <name>hbase.rootdir</name>
   <value>hdfs://c1n8.gbif.org:8020/hbase</value>
 </property>
 <property>
   <name>hbase.cluster.distributed</name>
   <value>true</value>
 </property>
